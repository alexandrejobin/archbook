@model ArchBook.Services.Pilotage.Books.Dto.BookFormDto

@{
    var authors = ViewBag.Authors as IEnumerable<KeyValuePair<int, string>>;
}


<div asp-validation-summary="All" class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Fermer">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form action="@Url.RouteUrl(this.ViewContext.RouteData.Values)" method="post">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Title" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <textarea asp-for="Description" class="form-control" style="height:150px"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Price" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-3">
            <div class="input-group">
                <input asp-for="Price" class="form-control" />
                <div class="input-group-append">
                    <span class="input-group-text">$</span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AuthorIds" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <select asp-for="AuthorIds" class="form-control">
                @foreach (var author in authors)
                {
                    <option value="@author.Key">@author.Value</option>
                }
            </select>
        </div>
    </div>
</form>