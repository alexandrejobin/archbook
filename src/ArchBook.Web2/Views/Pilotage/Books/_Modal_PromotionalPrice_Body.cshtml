@model ArchBook.Services.Pilotage.Books.Dto.PromotionalPriceFormDto

<div asp-validation-summary="All" class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Fermer">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form action="@Url.RouteUrl(this.ViewContext.RouteData.Values)" method="post">
    <div class="form-group row">
        <label asp-for="Price" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-3">
            <div class="input-group">
                <input asp-for="Price" class="form-control" />
                <div class="input-group-append">
                    <span class="input-group-text">$</span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Period</label>
        <input asp-for="StartDate" type="hidden" />
        <input asp-for="EndDate" type="hidden" />
        <div class="col-sm-4">
            <input id="Period" name="Period" class="form-control" />
        </div>
    </div>
</form>

