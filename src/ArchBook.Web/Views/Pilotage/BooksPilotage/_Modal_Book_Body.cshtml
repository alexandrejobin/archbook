@model ArchBook.Services.Pilotage.Books.Dto.BookFormDto

@{
    var authors = ViewBag.Authors as IEnumerable<KeyValuePair<int, string>>;
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        @Html.ValidationSummary()
        <button type="button" class="close" data-dismiss="alert" aria-label="Fermer">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.LabelFor(x => x.Title, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Description, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", style = "height:150px;" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Price, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-3">
            <div class="input-group">
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                <div class="input-group-append">
                    <span class="input-group-text">$</span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.AuthorIds, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.ListBoxFor(x => x.AuthorIds, new SelectList(authors, "key", "value"), new { @class = "form-control" })
        </div>
    </div>
}
